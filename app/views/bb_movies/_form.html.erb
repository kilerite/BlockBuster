

<div class="d-flex justify-content-center">
  <div class="card" style="width: 300px;">
    <div class="card-body">
      <h5 class="card-title"></h5>

      <%= form_with(model: @bb_movie) do |form| %>
        <% if @bb_movie.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(bb_movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

            <ul>
              <% bb_movie.errors.each do |error| %>
