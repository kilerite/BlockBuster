          <%= form.label :name, "Nombre de la Pelicula", style: "display: block" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

       
        <div class="d-flex justify-content-between">
          <%= form.submit "Guardar", class: "btn btn-primary" %>
